    <body>
        <div id="balanco" class="content">
            <header>
                <div class="welcome">
                    Olá, fulano
                </div>
                <div class="button">
                    <a href="home.html"> <img src="images/voltar.png" title="Voltar à home"></img></a>
                </div>
            </header>
        
            <main>
                <div class="registros">
                    <table>
                        <tbody>
                            <tr>
                                <td>26/02</td>
                                <td>Almoço mãe</td>
