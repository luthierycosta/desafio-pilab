        <div class="modal-wrapper" id="entrada">
            <div class="modal">
                <div>
                    <h2>Nova entrada</h2>
                    <form action=""> 
                        <input type="date" id="data" placeholder="Data">
                        <input type="number" id="valor" placeholder="Valor">
                        <input type="text" id="descricao" placeholder="Descrição">
                        <button> Salvar entrada</button>
                        <a class="button outlined action-cancel entrada">
                            Cancelar
                        </a>
                    </form> 
                </div>
            </div>
        </div>

        <div class="modal-wrapper" id="saida">
            <div class="modal">
                <div>
                    <h2>Nova saída</h2>
                    <form action=""> 
                        <input type="date" id="data" placeholder="Data">
                        <input type="number" id="valor" placeholder="Valor">
                        <input type="text" id="descricao" placeholder="Descrição">
                        <button> Salvar saída</button>
                        <a class="button outlined action-cancel saida">
                            Cancelar
                        </a>
                    </form> 
                </div>             
            </div>
        </div>

        
